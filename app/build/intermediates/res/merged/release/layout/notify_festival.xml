<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makemobiapps.jesusthelord.util.TextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_festival"
        android:text="@string/happy_christmas"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/app_theme_color"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_cheers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_app"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme_color"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <com.makemobiapps.jesusthelord.util.TextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_share_festival"
        android:text="@string/share_festival"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_above="@+id/btn_cheers"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>